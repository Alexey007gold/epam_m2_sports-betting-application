<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="20190108153306" author="Oleksii Kovetskyi">
        <createTable tableName="outcome">
            <column name="id" type="INT">
                <constraints primaryKey="true"/>
            </column>
            <column name="result_id" type="INT"/>
            <column name="bet_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_outcome_result"
                                 baseTableName="outcome"
                                 baseColumnNames="result_id"
                                 referencedTableName="result"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint constraintName="fk_outcome_bet"
                                 baseTableName="outcome"
                                 baseColumnNames="bet_id"
                                 referencedTableName="bet"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>