<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="20190108152705" author="Oleksii Kovetskyi">
        <createTable tableName="bet">
            <column name="id" type="INT">
                <constraints primaryKey="true"/>
            </column>
            <column name="sport_event_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="bet_type" type="CHAR">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="BIGINT(19)" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_bet_sport_event"
                                 baseTableName="bet"
                                 baseColumnNames="sport_event_id"
                                 referencedTableName="sport_event"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>