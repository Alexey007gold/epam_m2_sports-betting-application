<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="20190108151004" author="Oleksii Kovetskyi">
        <createTable tableName="sport_event">
            <column name="id" type="INT">
                <constraints primaryKey="true"/>
            </column>
            <column name="event_type" type="CHAR">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="start_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="end_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="result_id" type="INT">
                <constraints nullable="true"/>
            </column>
            <column name="version" type="BIGINT(19)" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_sport_event_result"
                                 baseTableName="sport_event"
                                 baseColumnNames="result_id"
                                 referencedTableName="result"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>